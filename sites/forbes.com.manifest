short_name: "Forbes"
root_domain: "forbes.com"
start_url: "http://www.forbes.com"
subdomain_blacklist: "blogs.forbes.com" # This is their account management site.
subdomain_blacklist: "related.forbes.com"
path_blacklist {
  needle: "/account/"
}
path_blacklist {
  needle: "/pictures/"
}
path_blacklist {
  needle: "/video/"
}
path_blacklist {
  needle: ".*\\/[0-9]{1,3}\\/$" # Page 2, 3, etc.
  location: REGEX_MATCH
}
path_blacklist {
  needle: "/print/"
  location: ENDS_WITH
}
paragraph_selector: ".article_body p"
paragraph_selector: ".article-body p"
paragraph_selector: ".article-content-body p"
paragraph_selector: ".article .body p"
paragraph_selector: "body_inner > p"

# E.g. http://www.forbes.com/newsletters/validea-hot-list/2015/01/30/hot-list-portfolio-bouncing-back-in-early-2015/
paragraph_selector: ".body-text > p"

# E.g. http://www.forbes.com/sites/maribellopez/2015/03/02/hp-rides-arubas-wave-into-contextual-networking/
paragraph_selector: ".body .body_inner span"

# Should already be handled by ".article_body p", but for some reason it doesn't
# work for
# http://www.forbes.com/sites/francescoppola/2015/04/15/deutsche-banks-latest-fine-shows-it-is-too-big-to-manage/
paragraph_selector: ".body_inner p"

article_url_pattern {
  path_regex: "^\\/sites\\/[^\\/]+\\/20[0-9]{2}\\/[01][0-9]\\/[0-3][0-9]\\/"
}
article_url_pattern {
